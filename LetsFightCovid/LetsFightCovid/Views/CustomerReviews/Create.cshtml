@model LetsFightCovid.Models.CustomerReview

<!DOCTYPE html>
<html>

@{
    ViewBag.Title = "Create";
}

<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v7 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/Content/fontscnt/material-design-iconic-font/~/Content/csscnt/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/Content/csscnt/style.css">
    <link rel="stylesheet" href="~/Content/images/imagescnt/bg-registration-form-7.jpg">
</head>

<body>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="wrapper">
            <div class="inner">
                <form action="">
                    <h3>Contact Us</h3>
                    <p>HERE YOU CAN SHARE YOUR OPINION WITH US</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <label class="form-group">
                        @Html.LabelFor(model => model.customer_name, htmlAttributes: new { @class = "control -label col-md-2" })
                        <label class="form-group">
                            @Html.EditorFor(model => model.customer_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                        </label>
                    </label>

                    <label class="form-group">
                        @Html.LabelFor(model => model.customer_address, htmlAttributes: new { @class = "control-label col-md-2" })
                        <label class="form-group">
                            @Html.EditorFor(model => model.customer_address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.customer_address, "", new { @class = "text-danger" })
                        </label>
                    </label>

                    <label class="form-group">
                        @Html.LabelFor(model => model.customer_email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <label class="form-group">
                            @Html.EditorFor(model => model.customer_email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.customer_email, "", new { @class = "text-danger" })
                        </label>
                    </label>

                    <label class="form-group">
                        @Html.LabelFor(model => model.customer_review, htmlAttributes: new { @class = "control-label col-md-2" })
                        <label class="form-group">
                            @Html.EditorFor(model => model.customer_review, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.customer_review, "", new { @class = "text-danger" })
                        </label>
                    </label>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <input type="submit" value="Submit" class="btn btn-default" classi="zmdi zmdi-arrow-right" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <label> @ViewBag.Notification </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    }



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>