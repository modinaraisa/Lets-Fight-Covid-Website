@model IEnumerable<LetsFightCovid.Models.VaccinationCenter>

@{
    ViewBag.Title = "IndexVac1";
}

<h2>Vaccination Centers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hospital_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.center_location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.available_vaccine)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hospital_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.center_location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.available_vaccine)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.center_ID }, new { @class = "btn btn-success btnStyle" }) 
        </td>
    </tr>
}

</table>
